{% extends "templates/navbarBase.jinja" %}
{% set active_page = "search" %}
{% include "templates/accounts.jinja" %}

{% block content %}
<div class="container">
    <form action="/searchUsernameResults" method="get">
        {% for field in fields %}
        <div class="form-group mb-4">
            <label class="form-label" for="{{ field.id }}"> {{ field.label }} </label>
            <input type="{{ field.type }}" id="{{ field.id }}" name="{{ field.id }}" class="form-control"
                   placeholder="Enter {{ field.label }}">
        </div>
        {% endfor %}
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

{% block Accountcontent %}{% endblock %}
{% endblock content %}