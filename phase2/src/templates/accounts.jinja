{% extends "templates/base.jinja" %}
{% block content %}
    <div class="container">
        <form action="/searchUsernameResults" method="get">
            {% for field in fields %}
                <div class="form-group mb-4">
                    <label class="form-label" for="{{ field.id }}"> {{ field.label }} </label>
                    <input type="{{ field.type }}" id="{{ field.id }}" name="{{ field.id }}" class="form-control"
                           placeholder="Enter {{ field.id }}">
                </div>
            {% endfor %}
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    {% if accounts %}
        <div class="container mt-5">
            <h3>Results</h3>
            <table class="table">
                <tbody>
                {% for account in accounts %}
                    <tr>
                        <th class="account" scope="row">
                            <a href="viewProfile/{{ account.username }}">{{ account.username }}</a>
                        </th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock content %}